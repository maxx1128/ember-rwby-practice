<div class="rwby-flex rwby-flex-wrap rwby-flex-nowrap-sm">
  <div class="rwby-flex-item rwby-flex-basis-12 rwby-flex-basis-4-sm rwby-flex rwby-flex-column rwby-p-base">
    <h2>
      Teams
    </h2>

    {{#each model as |team|}}
      <h4 class="rwby-mb-none">
        {{#link-to 'teams.team' team.id}}
          {{team.name}}
        {{/link-to}}
      </h4>
      <ul class="rwby-mb-double rwby-mt-half">
        {{#each team.characters as |char|}}
          <li>
            {{char.name}}
          </li>
        {{/each}}
      </ul>
    {{/each}}
  </div>

  <div class="rwby-flex-item rwby-flex-basis-12 rwby-p-base">
    {{outlet}}
  </div> 
</div>
